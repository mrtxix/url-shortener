<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='0.9em' font-size='90'>ðŸ”—</text></svg>"
    />
    <title>URL Shortener</title>
    <style>
      body {
        background: #fff;
      }
      .container {
        margin-top: 20px;
      }
      h1 {
        font-weight: 700;
        margin-bottom: 24px;
      }
      .shorten-form {
        margin-bottom: 24px;
      }
      .shorten-form input[type="url"] {
        flex: 1 1 auto;
        min-width: 250px;
        height: 44px;
        margin-right: 10px;
      }
      .shorten-form button[type="submit"] {
        height: 44px;
        min-width: 100px;
      }
      .table-responsive {
        width: 100%;
      }
      .table {
        margin-top: 20px;
        background: #fff;
        width: 100%;
        table-layout: fixed;
      }
      .table th,
      .table td {
        vertical-align: middle !important;
        padding: 12px 10px;
        word-break: break-all;
      }
      .table th.full-url-col,
      .table td.full-url-col {
        min-width: 260px;
        width: 32%;
      }
      .table th.short-url-col,
      .table td.short-url-col {
        min-width: 220px;
        width: 32%;
      }
      .table th,
      .table td {
        text-align: left;
      }
      .table td .btn {
        min-width: 36px;
        min-height: 36px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        padding: 0;
      }
      .table td .btn + .btn {
        margin-left: 6px;
      }
      @media (max-width: 900px) {
        .table th.full-url-col,
        .table td.full-url-col,
        .table th.short-url-col,
        .table td.short-url-col {
          min-width: 120px;
          width: 30%;
        }
      }
      @media (max-width: 600px) {
        .shorten-form input[type="url"] {
          min-width: 120px;
        }
        .table th,
        .table td {
          font-size: 0.95rem;
          padding: 8px 4px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>

      <form
        action="/shortUrls"
        method="POST"
        class="shorten-form d-flex align-items-center"
      >
        <label for="fullUrl" class="sr-only">Url</label>
        <input
          required
          placeholder="Url"
          type="url"
          name="fullUrl"
          id="fullUrl"
          class="form-control"
        />
        <button class="btn btn-success ml-2" type="submit">Shrink</button>
      </form>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="full-url-col">Full URL</th>
              <th class="short-url-col">Short URL</th>
              <th>Clicks</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr>
              <td class="full-url-col">
                <a href="<%= shortUrl.full %>" target="_blank">
                  <%= shortUrl.full %></a
                >
              </td>
              <td class="short-url-col">
                <a href="<%= baseUrl %>/<%= shortUrl.short %>" target="_blank">
                  <%= baseUrl %>/<%= shortUrl.short %></a
                >
              </td>
              <td><%= shortUrl.clicks %></td>
              <td>
                <button
                  class="btn btn-sm btn-outline-primary"
                  onclick="copyLink('<%= baseUrl %>/<%= shortUrl.short %>')"
                  title="Copy link"
                >
                  <i class="bi bi-clipboard"></i>
                </button>
                <button
                  class="btn btn-sm btn-outline-danger"
                  onclick="deleteUrl('<%= shortUrl.short %>')"
                  title="Delete"
                >
                  <i class="bi bi-trash"></i>
                </button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      function copyLink(link) {
        navigator.clipboard.writeText(link).then(function () {
          alert("Link copied to clipboard!");
        });
      }

      function deleteUrl(shortUrl) {
        if (confirm("Delete this URL?")) {
          fetch(`/delete/${shortUrl}`, {
            method: "DELETE",
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.message) {
                location.reload();
              } else {
                alert("Error deleting URL");
              }
            })
            .catch((error) => {
              alert("Error deleting URL");
            });
        }
      }
    </script>
  </body>
</html>
